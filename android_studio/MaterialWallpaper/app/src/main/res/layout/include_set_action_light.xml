<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/set_action_height">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_share"
            style="?attr/floatingActionButtonSmallStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            app:backgroundTint="@color/color_light_fab_background"
            app:elevation="3dp"
            app:maxImageSize="22dp"
            app:pressedTranslationZ="0dp"
            app:tint="@color/color_light_fab_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_download"
            style="?attr/floatingActionButtonSmallStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_set_save"
            app:backgroundTint="@color/color_light_fab_background"
            app:elevation="3dp"
            app:maxImageSize="22dp"
            app:pressedTranslationZ="0dp"
            app:tint="@color/color_light_fab_icon" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_set_action"
            style="?attr/floatingActionButtonPrimaryStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_large"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:src="@drawable/ic_set_apply"
            app:backgroundTint="@color/color_light_fab_background"
            app:elevation="3dp"
            app:maxImageSize="32dp"
            app:tint="@color/color_light_fab_icon" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_favorite"
            style="?attr/floatingActionButtonSmallStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_fav_outline"
            app:backgroundTint="@color/color_light_fab_background"
            app:elevation="3dp"
            app:maxImageSize="22dp"
            app:pressedTranslationZ="0dp"
            app:tint="@color/color_light_fab_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_info"
            style="?attr/floatingActionButtonSmallStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_info"
            app:backgroundTint="@color/color_light_fab_background"
            app:elevation="3dp"
            app:maxImageSize="22dp"
            app:pressedTranslationZ="0dp"
            app:tint="@color/color_light_fab_icon" />

    </LinearLayout>

</LinearLayout>